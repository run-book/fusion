{
  "template":    "typescript",
  "name":        "@fusionconfig/fileopsconfig",
  "description": "loads the merged configuration from the file system",
  "packageJson": {
    "dependencies":    {
      "@laoban/utils":"${properties.laobanVersion}"
    },
    "devDependencies": {
      "@laoban/variables":      "${properties.laobanVersion}",
      "@laoban/filesops-node":  "${properties.laobanVersion}",
      "@itsmworkbench/urlstore": "${properties.itsmVersion}",
      "@itsmworkbench/yaml":   "${properties.itsmVersion}"
    }
  },
  "links":       [
    "@fusionconfig/config"
  ],
  "guards":      {
    "compile": true,
    "publish": true,
    "test":    true
  }
}
